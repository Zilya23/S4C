<Page x:Class="School4Children.Pages.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School4Children.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btnBack"
                Content="Назад"
                Grid.Column="0"
                FontFamily="Microsoft JhengHei UI Light"
                FontSize="30"
                Margin="4"
                Height="Auto"
                Click="btnBackClick"/>

        <TextBlock x:Name="teacherNameTb"
                   Grid.Column="2" Grid.ColumnSpan="2"
                   FontSize="30"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" 
                   FontFamily="Microsoft JhengHei UI Light"/>

        <StackPanel Orientation="Vertical" Grid.Column="4" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="lessomNameTb" Foreground="Black" FontSize="18    "/>
            <TextBlock x:Name="dateTb" Foreground="Black" FontSize="18"/>
        </StackPanel>
        
        <ListView x:Name="lvLessons" 
                  ItemsSource="{Binding students}"
                  Grid.Row="2" Grid.RowSpan="7"
                  Grid.Column="0" Grid.ColumnSpan="6"
                  FontSize="25"
                  HorizontalAlignment="Stretch"
                  FontFamily="Microsoft JhengHei UI Light">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            
            
        </ListView>
    </Grid>
</Page>
